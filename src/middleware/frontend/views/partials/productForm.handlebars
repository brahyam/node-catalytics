<div class="form-group">
  <label>Name</label>
  <input required class="form-control" name="name" id="productName" placeholder="Name" value="{{name}}">
</div>

<div class="form-group">
  <label>Description</label>
  <input class="form-control" name="description" id="productDesc" placeholder="Description" value="{{description}}">
</div>

<div class="form-group">
  <label>Price</label>
  <input class="form-control" name="price" id="productPrice" placeholder="Price" value="{{price}}">
</div>

<div class="form-group">
  <label>Quantity</label>
  <input class="form-control" name="quantity" id="productQuantity" placeholder="Quantity" value="{{quantity}}">
</div>

<button type="submit" class="btn btn-default">Submit</button>
